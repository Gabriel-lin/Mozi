{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mozi",
  "version": "0.1.0",
  "identifier": "com.gab.mozi",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Mozi",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": {
      "windows": ["portable", "nsis", "msi"],
      "linux": ["deb", "rpm", "AppImage"],
      "darwin": ["dmg", "app"]
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
